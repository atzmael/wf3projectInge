{% extends "layout.html.twig" %}

{% block content %}

    <main class="container">
        <div class="row">
            <div class="section1 col-12 text-center">
                <h2>Trouve le code de tes rêves !</h2>
                <p><a href="{{ path('recherche') }}" class="linkBtn">Rechercher</a></p>
                <div class="row justify-content-center">
                    {% for ligne in index %}
                    <div class="langages col-md-4 mh-100">
                        <div>
                            <h3><a href="{{ path('codes', {'langName': ligne.language_name}) }}">{{ ligne.language_name|upper }}</a></h3>
                            <p class="nbCode">{{ ligne.nb }} codes parus</p>
                        <p>derniers code ajouté : <a href="{{ path('article', {'id': ligne.lastIdArticle}) }}">{{ ligne.lastArticle }}</a></p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="section2 col-12 text-center">
                <h2>Tous nos codes</h2>
                <div class="row">
                    {% for ligne in article %}
                        <div class="code col-md-4">
                            <div>
                                <h3><a href="{{ path('article', {'id': ligne.id_article})  }}">{{ ligne.title }}</a></h3>
                                <p>Posté le {{ ligne.release_date|date('d/m/Y') }} par {{ ligne.pseudo }}</p>
                            </div>
                        </div>
                    {% endfor %}

                </div>
                <a href="" class="linkBtn">voir tout</a>
            </div>
        </div>
    </main>


{% endblock %}
